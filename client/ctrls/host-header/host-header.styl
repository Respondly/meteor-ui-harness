@import 'uih.import'


.uih-host-header
  font-family $UIH_SANS
  color rgba(black, 0.6)
  *
    box-sizing border-box !important

  padding 0 30px

  &.uih-show-hr
    .uih-content
      border-bottom solid 1px rgba(black, 0.1)
      padding-bottom 15px


  h1, h2
    margin 0
    padding 0
    font-family $UIH_SANS
  code
    position relative

  h1
    font-size 40px
    font-weight bold
    line-height 48px
    padding-top 20px
    letter-spacing -0.8px
    code
      font-size 30px
      top -3px

  h2
    font-weight 200
    line-height 28px
    font-size 24px
    padding-top 4px
    padding-bottom 10px
    letter-spacing 0px
    code
      top -3px

