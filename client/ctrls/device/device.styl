@import 'core.import'


.uih-device
  position relative
  background $RED
  border-radius 15px
  background rgba(black, 0.08)
  padding 30px

  // ------------------------------------------------------

  > .uih-home-button
    background rgba(black, 0.1)
    size(32)
    border-radius 16px

  BOTTOM_PADDING = 70px
  TOP_PADDING = 50px
  BUTTON_EDGE = 20px

  &.portrait
    padding-top TOP_PADDING
    padding-bottom BOTTOM_PADDING
    .uih-home-button
      abs-center-x()
      bottom BUTTON_EDGE

  &.landscape
    padding-left BOTTOM_PADDING
    padding-right TOP_PADDING
    .uih-home-button
      abs-center-y()
      left BUTTON_EDGE

  // ------------------------------------------------------

  > .uih-screen
    overflow hidden
    background white
    border solid 1px rgba(black, 0.10)

  > .uih-size
    font-size 8px
    abs-pos null, null, 10, -15px
    color rgba(black, 0.3)


