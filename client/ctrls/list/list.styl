@import 'ui-harness.import'


.uih-list
  position relative
  overflow hidden
  overflow-y auto
  font-size 14px
  line-height 22px

  code
    uih-index-code()

  > ul
    padding 0px
    margin 0px
    > li
      position relative
      list-style none
      padding 12px
      padding-right 8px
      margin 0px
      border-bottom solid 1px $TH_INDEX_DIVIDER_COLOR
      user-select none

  .uih-label
    text-shadow 0px 1px rgba(white, 0.9)

  li:hover
    cursor pointer
    .uih-label
      color $TH_LINK_BLUE

  .uih-empty
    position relative
    margin-top 30px
    text-align center
    font-size 14px
    font-style italic
    color rgba(black, 0.2)
    user-select none
    cursor default
