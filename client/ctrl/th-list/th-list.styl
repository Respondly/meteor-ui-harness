@import 'th.import'


.th-list
  overflow hidden
  overflow-y auto
  font-size 14px
  > ul
    padding 0px
    margin 0px
    > li
      list-style none
      padding 12px
      padding-right 8px
      margin 0px
      border-bottom solid 1px rgba(black, 0.05)


  .th-label
    text-shadow 0px 1px rgba(white, 0.9)

  li:hover
    cursor pointer
    .th-label
      color #2987d0
