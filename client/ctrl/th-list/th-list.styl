@import 'th.import'


.th-list
  overflow hidden
  overflow-y auto
  font-size 14px
  > ul
    padding 0px
    margin 0px
    > li
      position relative
      list-style none
      padding 12px
      padding-right 8px
      margin 0px
      border-bottom solid 1px rgba(black, 0.05)
      user-select none

  .th-label
    text-shadow 0px 1px rgba(white, 0.9)

  li:hover
    cursor pointer
    .th-label
      color $TH_LINK_BLUE

  .th-empty
    position relative
    margin-top 30px
    text-align center
    font-size 14px
    font-style italic
    color rgba(black, 0.2)
    user-select none
    cursor default
