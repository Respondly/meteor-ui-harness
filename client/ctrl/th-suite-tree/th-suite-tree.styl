@import 'th.import'


.th-suite-tree
  HEADER_HEIGHT = 40px
  BG_LIGHT = #e0e4ea
  BG_DARK = #d0d7e0
  DURATION = 0.2s

  abs-pos 0, 0, null, 0
  width $TH_INDEX_WIDTH
  font-family $TH_SANS
  user-select none

  > .th-header
    background BG_DARK
    border-bottom solid 1px rgba(black, 0.15)
    abs-pos 0, 0, 0, null
    height HEADER_HEIGHT
    .th-back-btn
      cursor pointer
      abs-pos 5, 5, null, 5
      width 30px
      background rgba(black, 0.1)
      opacity 0
      transform translateX(-35px)
      transition transform DURATION, opacity DURATION

    .th-title
      ellipsis()
      text-align center
      font-weight bold
      text-shadow 0px 1px white
      font-size 18px
      opacity 0.6
      margin 0 10px
      margin-top 10px
      transition margin DURATION, padding DURATION


  > .th-tree-outer
    abs-pos 0, HEADER_HEIGHT + 1, 0, 0
    background linear-gradient(top, BG_LIGHT, BG_DARK)
    border-top solid 1px rgba(white, 0.8)

  .th-list
    abs-pos 0, 0, 0, 0
    transition transform 0.2s
    &.th-right
      transform translateX($TH_INDEX_WIDTH)
    &.th-left
      transform translateX(0 - $TH_INDEX_WIDTH)


  &.th-has-parent
    .th-header
      .th-title
        margin-left 40px
        padding-right 30px
      .th-back-btn
        transform translateX(0px)
        opacity 1



