@import 'th.import'


.th-suite-tree
  HEADER_HEIGHT = 40px
  DURATION = 0.2s

  abs-pos 0, 0, null, 0
  width $TH_INDEX_WIDTH
  font-family $TH_SANS
  user-select none

  > .th-header
    background $TH_INDEX_BG_DARK
    border-bottom solid 1px rgba(black, 0.15)
    abs-pos 0, 0, 0, null
    height HEADER_HEIGHT
    .th-back-btn
      cursor pointer
      abs-pos 0, 0, null, 0
      width 35px
      opacity 0
      transform translateX(-35px)
      transition transform DURATION, opacity DURATION
      .th-ico
        package-image('test-harness', 'nav-back.png', 13, 18)

      &:hover
        .th-ico
          package-image('test-harness', 'nav-back-hover.png', 13, 18)

    .th-titles
      abs-pos 10, 10, 10, null
      height 26px
      transition left DURATION, right DURATION

    .th-title
      abs-pos 0, 0, 0, 0
      ellipsis()
      text-align center
      font-weight bold
      text-shadow 0px 1px rgba(white, 0.9)
      font-size 18px
      color $TH_INDEX_TEXT_DARK
      transition opacity DURATION
      cursor default

  > .th-tree-outer
    abs-pos 0, HEADER_HEIGHT + 1, 0, 0
    background linear-gradient(top, $TH_INDEX_BG_LIGHT, $TH_INDEX_BG_DARK)
    border-top solid 1px rgba(white, 0.8)

  .th-list
    abs-pos 0, 0, 0, 0
    transition transform 0.2s
    &.th-right
      transform translateX($TH_INDEX_WIDTH)
    &.th-left
      transform translateX(0 - $TH_INDEX_WIDTH)


  &.th-has-parent
    .th-header
      .th-titles
        left 35px
        right 35px

      .th-back-btn
        transform translateX(0px)
        opacity 1



