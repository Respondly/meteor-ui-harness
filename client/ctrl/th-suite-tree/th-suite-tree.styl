@import 'th.import'


.th-suite-tree
  HEADER_HEIGHT = 40px

  abs-pos 0, 0, null, 0
  width TEST_HARNESS_INDEX_WIDTH
  background rgba(black, 0.03)

  > .th-header
    background rgba(black, 0.05)
    border-bottom solid 1px rgba(black, 0.1)
    abs-pos 0, 0, 0, null
    height HEADER_HEIGHT
    .back-btn
      cursor pointer


  > .th-tree-outer
    abs-pos 0, HEADER_HEIGHT + 1, 0, 0


  .th-list
    abs-pos 0, 0, 0, 0
    transition transform 0.2s

    &.th-right
      transform translateX(TEST_HARNESS_INDEX_WIDTH)

    &.th-left
      transform translateX(0 - TEST_HARNESS_INDEX_WIDTH)



