@import 'core.import'


.uih-host-header
  font-family $TH_SANS
  color rgba(black, 0.6)
  *
    box-sizing border-box !important

  padding 0 30px

  .uih-content
    border-bottom solid 1px darken(white, 10%)
    padding-bottom 15px

  h1, h2
    margin 0
    padding 0

  h1
    font-size 40px
    line-height 48px
    padding-top 20px
    letter-spacing -0.8px

  h2
    font-weight 200
    padding-top 10px
    padding-bottom 10px

