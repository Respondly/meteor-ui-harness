@import 'th.import'



.th-count-badge
  background rgba(black, 0.1)
  HEIGHT = 18px
  height HEIGHT
  border-radius 8px
  font-size 12px
  font-weight bold
  line-height 14px
  color white
  padding 0px
  HORIZONTAL_PADDING = 8px
  padding-left HORIZONTAL_PADDING
  padding-right HORIZONTAL_PADDING
  padding-top 4px
  text-shadow 0px 1px rgba(black, 0.25)
  user-select none


.th-label
  font-family $TH_SANS


.th-center-x
  abs-center-x()

.th-center-y
  abs-center-y()

.th-center-xy
  abs-center-xy()







